<Window x:Class="WPF_labb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_labb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
 <StackPanel Margin="5">
        <Label FontSize="30">Meddelanden</Label>
        <StackPanel Orientation="Horizontal">
            <Label Margin="5">Ange en text</Label>
            <TextBox Name="inputruta" Margin="5" Width="300"></TextBox>
        </StackPanel>
        <Button Click="Skicka_Click" Margin="5" Width="200" Height="30" HorizontalAlignment="Left">Skicka!</Button>
        <TextBlock Name="textruta" Margin="5" Background="#FFF" Height="100" TextWrapping="Wrap">
        </TextBlock>
    </StackPanel>
</Window>
