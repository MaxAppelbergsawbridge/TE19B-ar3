<Window x:Class="slutprojet_oop.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:slutprojet_oop" mc:Ignorable="d" Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Databas</Label>
        <TextBox Name="SvarRuta" Grid.Row="1" Grid.Column="0"></TextBox>
        <Button Name="KnappSpara" Click="KnappSparaClick" Grid.Row="2" Grid.Column="0">Spara</Button>
        <TextBlock Name="VisaRuta" Grid.Row="1" Grid.Column="1"></TextBlock>
        <Button Name="KnappRadera" Click="KnappRaderaClick" Grid.Row="2" Grid.Column="1">Radera</Button>
    </Grid>
</Window>